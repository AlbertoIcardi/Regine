<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="it.polito.tdp.regine.RegineController">
   <top>
      <Label text="Problema delle Regine" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label text="Lato" />
                  <Spinner fx:id="spinLato" prefHeight="25.0" prefWidth="104.0" />
                  <Button mnemonicParsing="false" onAction="#doCerca" text="Cerca" />
                  <Label text="Trovate:" />
                  <Label fx:id="lblTrovate" text="0" />
               </children>
            </HBox>
            <AnchorPane fx:id="anchor" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="300.0" style="-fx-border-color: black;" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <ImageView layoutX="85.0" layoutY="77.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Regina_nero.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
